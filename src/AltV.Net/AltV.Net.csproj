<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <RootNamespace>AltV.Net</RootNamespace>
        <Configurations>Debug;Release;Testing</Configurations>
        <Platforms>AnyCPU</Platforms>
        <RootNamespace>AltV.Net</RootNamespace>
        <Authors>AltMp</Authors>
        <Description>AltV .NET Core Server Api</Description>
        <Copyright>AltMp</Copyright>
        <PackageProjectUrl>https://github.com/altmp-csharp/docs</PackageProjectUrl>
        <RepositoryUrl>https://github.com/altmp-csharp/docs</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>altv gta bridge</PackageTags>
        <PackageVersion>1.0.0-dev-preview-7</PackageVersion>
        <PackageLicenseFile>license.txt</PackageLicenseFile>
        <PackageReleaseNotes>* static public function to convert EntityPointer to EntityId and EntityType * resources can now provide there own entity pool implementations * on tick callback * Resource abstract class to reduce initial setup * entities lists are now ICollection's for better compatibility with custom entity pools</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="license\license.txt" Pack="true" PackagePath="" />
    </ItemGroup>

    <PropertyGroup>
      <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Testing' ">
      <DebugSymbols>true</DebugSymbols>
      <DebugType>full</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DebugType>full</DebugType>
    </PropertyGroup>
</Project>